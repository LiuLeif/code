</nav>

<div class="panel panel-default">
    <div class="panel-heading">Query</div>
    <div class="panel-body">
        <form method="get" action="/devices" class="form-inline">
            <div class="form-group">
                <input type="text" class="form-control" name="imei" aria-describedby="imei" placeholder="IMEI" value={{.filter.imei}}>
            </div>
            <div class="form-group">
                <input type="text" class="form-control" name="vendor" placeholder="vendor" value={{.filter.vendor}}>
            </div>
            <button type="submit" class="btn btn-primary">Filter</button>
        </form>      
    </div>
</div>

<div class="panel panel-default">
    <div class="panel-heading">Enroll</div>
    <div class="panel-body">
        <form method="get" action="/devices" class="form-inline">
            <input type="text" class="form-control" name="imei" aria-describedby="imei" placeholder="IMEI">
            <label>or</label>
            <input type="file" class="form-control">            
            <button type="submit" class="btn btn-primary">Enroll</button>
        </form>      
    </div>
</div>

<div>
    <table class="table table-hover">
        <thead class="thead-dark">
            <tr>
                <th>IMEI</th>
                <th>Vendor</th>
            </tr>
        </thead>
        <tbody>
            {{range .Devices}}  
            <tr>
                <td>{{.IMEI}}</td>
                <td>{{.Vendor}}</td>        
            </tr>
            {{end}}  
        </tbody>
    </table>
</div>


