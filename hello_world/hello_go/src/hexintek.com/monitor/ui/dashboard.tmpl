{{template "header.tmpl" .}}
<nav class="navbar navbar-default">
    <div class="container-fluid">
        <div class="navbar-header">
            <a class="navbar-brand" href="/dashboard">Hexintek Web Console</a>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
            <!-- <ul class="nav navbar-nav">
                 <li class="active"><a href="#">Home</a></li>
                 </ul> -->
            <ul class="nav navbar-nav navbar-right">
                <li>
                    <div class="dropdown">
                        <button class="btn dropdown-toggle" type="button" data-toggle="dropdown"> {{.username}}
                            <span class="caret"></span></button>
                        <ul class="dropdown-menu">
                            <li><a href="/login">Logout</a></li>
                        </ul>
                    </div>
                </li>
            </ul>
        </div>
    </div>
</nav>
<ul class="nav nav-tabs">
    <li class="active"><a data-toggle="tab" href="#query">Query</a></li>
    <li><a data-toggle="tab" href="#enroll">Enroll</a></li>
    <li><a data-toggle="tab" href="#bulk_enroll">Bulk Enroll</a></li>
</ul>

<div class="tab-content">
    <!-- dashboard -->
    <div id="query" class="tab-pane fade in active">
        <div class="panel panel-default">
            <div class="panel-heading">Query</div>
            <div class="panel-body">
                <form method="get" action="/dashboard" class="form-inline">
                    <div class="form-group">
                        <input type="text" class="form-control" name="imei" aria-describedby="imei" placeholder="IMEI" value={{.filter.imei}}>
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" name="vendor" placeholder="vendor" value={{.filter.vendor}}>
                    </div>
                    <button type="submit" class="btn btn-primary">Filter</button>
                </form>      
            </div>
        </div>        
    </div>
    <div id="enroll" class="tab-pane fade">
        <div class="panel panel-default">
            <div class="panel-heading">Enroll</div>
            <div class="panel-body">
                <form method="post" action="/enroll" class="form-inline">
                    <input type="text" class="form-control" name="imei" aria-describedby="imei" placeholder="IMEI">
                    <input type="text" class="form-control" name="vendor" aria-describedby="imei" placeholder="Vendor">            
                    <button type="submit" class="btn btn-primary">Enroll</button>
                </form>      
            </div>
        </div>        
    </div>
    <div id="bulk_enroll" class="tab-pane fade">
        <div class="panel panel-default">
            <div class="panel-heading">Enroll File</div>
            <div class="panel-body">
                <form method="post" action="/bulk_enroll" class="form-inline" enctype="multipart/form-data">
                    <input type="file" class="form-control" name="upload_file">
                    <button type="submit" class="btn btn-primary">Enroll</button>
                </form>      
            </div>
        </div>        
    </div>
</div>

<div class="panel panel-default">
    <div class="panel-heading">Query result: {{ .count }} items</div>
    <div class="panel-body">

        <div>
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>IMEI</th>
                        <th>Vendor</th>
                    </tr>
                </thead>
                <tbody>
                    {{range .Devices}}  
                    <tr>
                        <td>{{.IMEI}}</td>
                        <td>{{.Vendor}}</td>        
                    </tr>
                    {{end}}  
                </tbody>
            </table>
        </div>

    </div>
</div>
{{template "footer.tmpl" .}}
